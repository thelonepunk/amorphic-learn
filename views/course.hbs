<div class="course-page">
    <div class="course-header">
        <a href="/" class="back-link">← All courses</a>
        <h1>{{course.title}}</h1>
        <p class="course-desc">{{course.description}}</p>
        <div class="course-progress-bar">
            <div class="progress-bar-lg">
                <div class="progress-fill" style="width: {{progressPercent completedCount totalCount}}%"></div>
            </div>
            <span>{{completedCount}} of {{totalCount}} complete</span>
        </div>
    </div>
    
    <div class="lesson-list">
        {{#each lessons}}
        <a href="/course/{{../course.slug}}/{{this.slug}}" class="lesson-item {{#if this.completed}}completed{{/if}}">
            <div class="lesson-number">
                {{#if this.completed}}
                    <span class="check">✓</span>
                {{else}}
                    <span>{{add @index 1}}</span>
                {{/if}}
            </div>
            <div class="lesson-info">
                <h3>{{this.title}}</h3>
                {{#if this.description}}<p>{{this.description}}</p>{{/if}}
            </div>
            {{#if this.duration}}
            <div class="lesson-duration">{{duration this.duration}}</div>
            {{/if}}
        </a>
        {{/each}}
    </div>
</div>
